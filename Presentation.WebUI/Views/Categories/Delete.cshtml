@model Application.Queries.Categories.GetCategories.CategoryDto
@{
    ViewData["Title"] = Model.Name;
}

<div class="row">
    <div class="col-md-12">
        <h2>Silmek istediğinize emin misiniz?</h2>
        <hr/>
        
        <div class="row">
            <div class="form-floating mb-3">
                <input disabled="disabled" asp-for="Name" class="form-control"/>
                <label asp-for="Name" class="control-label">Kategori Adı</label>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-12">
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id"/>
                    <input type="submit" value="Sil" class="btn btn-danger"/>
                </form>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-12">
                <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
            </div>
        </div>
    </div>
</div>