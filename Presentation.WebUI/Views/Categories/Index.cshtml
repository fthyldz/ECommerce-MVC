@using Application.Queries.Categories.GetCategories
@model IReadOnlyList<CategoryDto>
@{
    ViewData["Title"] = "Kategoriler";
}

<div class="row mb-3">
    <div class="col-md-12">
        <a class="btn btn-success" asp-action="Create">Yeni Kategori</a>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <h2>Kategoriler</h2>
        <hr/>
        
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th scope="col">Kategori Adı</th>
                <th scope="col" class="text-end">İşlemler</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="text-end">
                        <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>