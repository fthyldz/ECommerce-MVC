@model Application.Queries.Products.GetProducts.ProductDto
@{
    ViewData["Title"] = Model.Name;
}

<div class="row">
    <div class="col-md-12">
        <h2>Ürün Düzenle</h2>
        <hr/>
        
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="Name" class="form-control"/>
                <label asp-for="Name" class="form-label">Ürün Adı</label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Description" class="form-control"/>
                <label asp-for="Description" class="form-label">Ürün Açıklaması</label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Price" class="form-control" type="number"/>
                <label asp-for="Price" class="form-label">Fiyatı</label>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <select asp-for="Currency" class="form-control" asp-items="ViewBag.Currencies">
                    <option>-- Para Birimi Seç --</option>
                </select>
                <label asp-for="Currency" class="form-label">Para Birimi</label>
                <span asp-validation-for="Currency" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="StockQuantity" class="form-control" type="number" min="0" step="1"/>
                <label asp-for="StockQuantity" class="form-label">Stok</label>
                <span asp-validation-for="StockQuantity" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
                    <option>-- Kategori Seç --</option>
                </select>
                <label asp-for="CategoryId" class="form-label">Kategori</label>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary"/>
            </div>
        </form>

        <div class="mt-3">
            <a class="btn btn-secondary" asp-action="Index">Listeye Dön</a>
        </div>
    </div>
</div>