@model Application.Commands.Discounts.CreateDiscount.DTOs.CreateDiscountRequestDto
@{
    ViewData["Title"] = "İndirim Oluştur";
}

<div class="row">
    <div class="col-md-12">
        <h2>İndirim Oluştur</h2>
        <hr/>
        
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <select asp-for="ProductId" class="form-control" asp-items="ViewBag.Products">
                    <option>-- Ürün Seç --</option>
                </select>
                <label asp-for="ProductId" class="form-label">Ürün</label>
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <select asp-for="RoleId" class="form-control" asp-items="ViewBag.Roles">
                    <option value="00000000-0000-0000-0000-000000000000">-- Herkes --</option>
                </select>
                <label asp-for="RoleId" class="form-label">Kullanıcı Türü</label>
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Rate" class="form-control" type="number"/>
                <label asp-for="Rate" class="form-label">İndirim Oranı (%)</label>
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary"/>
            </div>
        </form>

        <div class="mt-3">
            <a class="btn btn-secondary" asp-action="Index">Listeye Dön</a>
        </div>
    </div>
</div>