@model IReadOnlyList<Application.Queries.Discounts.GetDiscounts.DiscountDto>
@{
    ViewData["Title"] = "İndirimler";
}

<div class="row mb-3">
    <div class="col-md-12">
        <a class="btn btn-success" asp-action="Create">Yeni İndirim</a>
    </div>
</div>
<hr/>

<div class="row">
    <div class="col-md-12">
        <h2>İndirimler</h2>
        <hr/>

        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th scope="col">Ürün Adı</th>
                <th scope="col">Kullanıcı Türü</th>
                <th scope="col">İndirim Oranı (%)</th>
                <th scope="col" class="text-end">İşlemler</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </td>
                    <td>
                        @(string.IsNullOrEmpty(item.RoleName) ? "Herkes" : item.RoleName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rate)
                    </td>
                    <td class="text-end">
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                            <input type="submit" value="Sil" class="btn btn-danger btn-sm"/>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>